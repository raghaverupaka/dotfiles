[alias]
	co = checkout
	br = branch
	ci = commit
	s = status
	d = diff
	alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /

	# From https://haacked.com/archive/2014/07/28/github-flow-aliases/
	wip = !git add -u && git commit -m "WIP"
	wipcont = reset HEAD~1 --mixed

	# From https://www.durdn.com/blog/2012/11/22/must-have-git-aliases-advanced-examples/
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	
	rebasemain = !git fetch origin main && git rebase origin/main && :
	rebasemaster = !git fetch origin master && git rebase origin/master && :

	# From https://gist.github.com/simonwagner/9552064
	fixup = "!sh -c '(git diff-files --quiet || (echo Unstaged changes, please commit or stash with --keep-index; exit 1)) && COMMIT=$(git rev-parse $1) && git commit --fixup=$COMMIT && git rebase -i --autosquash $COMMIT~1' -"
	
	uncommit = reset --soft HEAD^
[user]
	name = Raghav Erupaka
	email = raghav.erupaka@shopify.com
[rerere]
	enabled = true
[push]
	default = current
[diff]
  algorithm = patience
  noprefix = true
  colorMoved = zebra
[rebase]
	autoStash = true
[protocol]
	version = 2
[core]
	editor = nvim
	commitGraph = true
	excludesfile = /Users/chris/.gitignore_global
[gc]
	writeCommitGraph = true
[pull]
  rebase = true
[fetch]
  prune = true
